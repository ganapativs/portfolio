{
    "extends": "@ganapativs/react",
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "printWidth": 80,
            "trailingComma": "all",
            "jsxBracketSameLine": true
        }],
        "react/prop-types": 0,
        "react/display-name": 1,
        "no-param-reassign": 1,
        "no-nested-ternary": 1
    }
}
